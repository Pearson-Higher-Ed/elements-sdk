{
	"root": true,

	"extends": "@ljharb",

	"globals": {
		"Promise": false,
	},

	"rules": {
		"complexity": 0,
		"eqeqeq": [2, "allow-null"],
		"func-name-matching": 0,
		"id-length": 0,
		"max-lines-per-function": 0,
		"max-statements": 0,
		"operator-linebreak": [2, "before"],
	},

	"overrides": [
		{
			"files": "test/**",
			"env": {
				"es6": true,
			},
			"rules": {
				"max-lines-per-function": 0,
			},
		},
	],
}
