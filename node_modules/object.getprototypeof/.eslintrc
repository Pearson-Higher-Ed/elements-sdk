{
	"root": true,

	"extends": "@ljharb",

	"rules": {
		"id-length": 0,
		"max-statements": [2, 20],
		"new-cap": [2, {
			"capIsNewExceptions": [
				"ReflectGetPrototypeOf",
				"RequireObjectCoercible",
				"ToObject",
			],
		}],
	},

	"overrides": [
		{
			"files": "**/*.mjs",
			"rules": {
				"no-restricted-exports": 1,
			},
		},
	],
}
